; Please install https://editorconfig.org in your favourite code editor.
; Then your indents will be happy.

; お気に入りのコードエディターに https://editorconfig.org を導入してください。
; インデントが幸せになります。

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false
